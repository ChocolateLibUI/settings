{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "serve",
            "type": "npm",
            "script": "dev:pages",
            "promptOnClose": true,
            "isBackground": true,
            "problemMatcher": {
                "owner": "vite",
                "severity": "error",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "ERROR in (.*)",
                        "file": 1
                    },
                    {
                        "regexp": "\\((\\d+),(\\d+)\\):(.*)",
                        "line": 1,
                        "column": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Local:"
                }
            }
        }
    ]
}